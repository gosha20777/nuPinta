<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NuPinta.Controls.MainMenu">
    <Menu>
        <MenuItem Name="mFile" Header="File">
            <MenuItem Name="mFileNew" HotKey="Ctrl+N" InputGesture="Ctrl+N" Header="New"/>
            <MenuItem Name="mFileOpen" HotKey="Ctrl+O" InputGesture="Ctrl+O" Header="Open"/>
            <MenuItem Name="mFileSave" HotKey="Ctrl+S" InputGesture="Ctrl+S" Header="Save"/>
            <MenuItem Name="mFileSaveAs" HotKey="Ctrl+Shift+S" InputGesture="Ctrl+Shift+S" Header="Save As..."/>
        </MenuItem>
    </Menu>
</UserControl>
